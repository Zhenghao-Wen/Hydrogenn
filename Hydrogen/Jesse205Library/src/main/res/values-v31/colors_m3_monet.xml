<!-- res/values-v31/colors.xml -->
<!-- 这个文件定义了动态颜色（Monet）的亮色主题。 -->
<!-- 它只在 Android 12+ 的亮色模式下被使用。 -->
<resources>
    <!-- Primary -->
    <color name="md_theme_monet_primary">@android:color/system_accent1_600</color>
    <color name="md_theme_monet_onPrimary">@android:color/system_accent1_0</color>
    <color name="md_theme_monet_primaryContainer">@android:color/system_accent1_100</color>
    <color name="md_theme_monet_onPrimaryContainer">@android:color/system_accent1_900</color>
    
    <!-- Secondary -->
    <color name="md_theme_monet_secondary">@android:color/system_accent2_600</color>
    <color name="md_theme_monet_onSecondary">@android:color/system_accent2_0</color>
    <color name="md_theme_monet_secondaryContainer">@android:color/system_accent2_100</color>
    <color name="md_theme_monet_onSecondaryContainer">@android:color/system_accent2_900</color>
    
    <!-- Tertiary -->
    <color name="md_theme_monet_tertiary">@android:color/system_accent3_600</color>
    <color name="md_theme_monet_onTertiary">@android:color/system_accent3_0</color>
    <color name="md_theme_monet_tertiaryContainer">@android:color/system_accent3_100</color>
    <color name="md_theme_monet_onTertiaryContainer">@android:color/system_accent3_900</color>
    
    <!-- Error (通常保持静态，但也可以引用系统值) -->
    <color name="md_theme_monet_error">#BA1A1A</color>
    <color name="md_theme_monet_onError">#FFFFFF</color>
    <color name="md_theme_monet_errorContainer">#FFDAD6</color>
    <color name="md_theme_monet_onErrorContainer">#410002</color>

    <!-- Background and Surface -->
    <color name="md_theme_monet_background">@android:color/system_neutral1_10</color>
    <color name="md_theme_monet_onBackground">@android:color/system_neutral1_900</color>
    <color name="md_theme_monet_surface">@android:color/system_neutral1_10</color>
    <color name="md_theme_monet_onSurface">@android:color/system_neutral1_900</color>
    <color name="md_theme_monet_surfaceVariant">@android:color/system_neutral2_100</color>
    <color name="md_theme_monet_onSurfaceVariant">@android:color/system_neutral2_700</color>
    
    <!-- Outline -->
    <color name="md_theme_monet_outline">@android:color/system_neutral2_500</color>
    <color name="md_theme_monet_outlineVariant">@android:color/system_neutral2_200</color>
    
    <!-- Inverse -->
    <color name="md_theme_monet_inverseSurface">@android:color/system_neutral1_800</color>
    <color name="md_theme_monet_inverseOnSurface">@android:color/system_neutral1_50</color>
    <color name="md_theme_monet_inversePrimary">@android:color/system_accent1_200</color>
    
    <!-- Scrim -->
    <color name="md_theme_monet_scrim">#000000</color>

    <!-- M3.1 Surface Tones (可选，但推荐) -->
    <color name="md_theme_monet_surfaceDim">@android:color/system_neutral1_200</color>
    <color name="md_theme_monet_surfaceBright">@android:color/system_neutral1_10</color>
    <color name="md_theme_monet_surfaceContainerLowest">@android:color/system_neutral1_0</color>
    <color name="md_theme_monet_surfaceContainerLow">@android:color/system_neutral1_50</color>
    <color name="md_theme_monet_surfaceContainer">@android:color/system_neutral1_100</color>
    <color name="md_theme_monet_surfaceContainerHigh">@android:color/system_neutral1_200</color>
    <color name="md_theme_monet_surfaceContainerHighest">@android:color/system_neutral1_300</color>
</resources>